<script>
  const arrowOpenings = document.querySelectorAll('.arrow-open')
  const secondLorems = document.querySelectorAll('.secondLorem')
  const firstLorems = document.querySelectorAll('.firstLorem')
  const openpopup = document.querySelectorAll('.imageopen')
  const viewPopup = document.querySelector('.viewsopen')
  const popupImage = document.querySelector('.popup-image')
  const closePopup = document.querySelector('.close-popup')
  const thumbnails = document.querySelectorAll('.thumbnail')

  openpopup.forEach((image, index) => {
    image.addEventListener('click', () => {
      popupImage.src = image.src
      viewPopup.classList.remove('hidden')
    })
  })

  document.addEventListener('click', (event) => {
    if (!viewPopup.contains(event.target) && !Array.from(openpopup).includes(event.target)) {
      viewPopup.classList.add('hidden')
    }
  })

  closePopup.addEventListener('click', () => {
    viewPopup.classList.add('hidden')
  })

  thumbnails.forEach((thumbnail) => {
    thumbnail.addEventListener('click', () => {
      popupImage.src = thumbnail.src
    })
  })

  arrowOpenings.forEach((arrowOpening, index) => {
    arrowOpening.addEventListener('click', () => {
      secondLorems[index].classList.toggle('hidden')
    })
  })

  let slideIndex = 1
  showDivs(slideIndex)

  function plusDivs(n) {
    showDivs((slideIndex += n))
  }

  function showDivs(n) {
    let i
    const slides = document.getElementsByClassName('mySlides')
    if (n > slides.length) {
      slideIndex = 1
    }
    if (n < 1) {
      slideIndex = slides.length
    }
    for (i = 0; i < slides.length; i++) {
      // Line to update:
      slides[i].style.display = 'none'
    }
    // Line to update:
    slides[slideIndex - 1].style.display = 'block'
  }
</script>
